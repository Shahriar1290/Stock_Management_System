<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.stock_management_system.ProfileController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <children>
        <Label text="Profile" style="-fx-font-size: 18; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Button text="Update" fx:id="btnUpdateProfile" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </children>
</GridPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700" prefWidth="1200"
            style="-fx-background-color: #f4f6f9;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.stock_management_system.DashboardController">

    <VBox spacing="12" prefWidth="180"
          style="-fx-background-color: #2C3E50;"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="20" left="15" bottom="20" right="15"/>
        </padding>

        <Button fx:id="dashboardButton" text="Dashboard" onAction="#openDashboard" prefWidth="150"/>
        <Button fx:id="productsButton" text="Products" onAction="#openProducts" prefWidth="150"/>
        <Button fx:id="categoriesButton" text="Categories" onAction="#openCategories" prefWidth="150"/>
        <Button fx:id="ordersButton" text="Orders" onAction="#openOrders" prefWidth="150"/>
        <Button fx:id="suppliersButton" text="Suppliers" onAction="#openSuppliers" prefWidth="150"/>
        <Button fx:id="usersButton" text="Users" prefWidth="150"/>
        <Button fx:id="profileButton" text="Profile" onAction="#openProfile" prefWidth="150"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#logout"
                prefWidth="150"
                style="-fx-background-color:#E74C3C; -fx-text-fill:white;"/>
    </VBox>

    <AnchorPane fx:id="contentPane"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="220"
                AnchorPane.rightAnchor="0">

        <!-- EXISTING DASHBOARD CONTENT -->
        <VBox spacing="25" style="-fx-padding: 25;"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0">

            <Label text="Dashboard"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            <HBox spacing="20">
                <VBox alignment="CENTER" prefHeight="80" prefWidth="200"
                      style="-fx-background-color:#0ea5e9; -fx-background-radius:8;">
                    <Label text="Total Products" style="-fx-text-fill:white;"/>
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200"
                      style="-fx-background-color:#22c55e; -fx-background-radius:8;">
                    <Label text="Total Stock" style="-fx-text-fill:white;"/>
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200"
                      style="-fx-background-color:#eab308; -fx-background-radius:8;">
                    <Label text="Order Today" style="-fx-text-fill:white;"/>
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200"
                      style="-fx-background-color:#a855f7; -fx-background-radius:8;">
                    <Label text="Revenue" style="-fx-text-fill:white;"/>
                </VBox>
            </HBox>

            <HBox spacing="20">
                <VBox prefHeight="150" prefWidth="300"
                      style="-fx-background-color:white; -fx-padding:20;
                             -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label text="Out of Stock Products"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                </VBox>

                <VBox prefHeight="150" prefWidth="300"
                      style="-fx-background-color:white; -fx-padding:20;
                             -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label text="Highest Sale Product"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                </VBox>

                <VBox prefHeight="150" prefWidth="300"
                      style="-fx-background-color:white; -fx-padding:20;
                             -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label text="Low Stock Products"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                </VBox>
            </HBox>

        </VBox>
    </AnchorPane>

</AnchorPane>

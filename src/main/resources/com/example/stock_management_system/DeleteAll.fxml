<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.stock_management_system.DeleteAllController"
      spacing="20" alignment="CENTER">
    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <children>
        <Label text="Delete All Data" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: red;"/>
        <Label text="This action will permanently delete all records from the database." wrapText="true"/>
        <Button text="Confirm Delete All" fx:id="btnConfirmDeleteAll" style="-fx-background-color: red; -fx-text-fill: white;"/>
    </children>
</VBox>
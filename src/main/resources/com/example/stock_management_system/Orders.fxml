<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: #237580;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.stock_management_system.OrderController">

    <Label layoutX="20" layoutY="20" style="-fx-font-size: 26px;" text="Orders" />

    <Button layoutX="20" layoutY="70" onAction="#placeOrder" text="Place Order" />

    <TableView fx:id="orderTable" layoutX="20" layoutY="120" prefHeight="500" prefWidth="700">
        <columns>
            <TableColumn fx:id="colOrderId" prefWidth="100" text="Order ID" />
            <TableColumn fx:id="colProduct" prefWidth="200" text="Product" />
            <TableColumn fx:id="colQuantity" prefWidth="100" text="Quantity" />
            <TableColumn fx:id="colDate" prefWidth="200" text="Date" />
        </columns>
    </TableView>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700" prefWidth="1200" style="-fx-background-color: #84CEEB;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stock_management_system.DashboardController">

    <VBox prefWidth="180" spacing="12" style="-fx-background-color: #2C3E50;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">

        <padding>
            <Insets bottom="20" left="15" right="15" top="20" />
        </padding>

        <Button fx:id="dashboardButton" onAction="#openDashboard" prefWidth="150" text="Dashboard" />
        <Button fx:id="productsButton" onAction="#openProducts" prefWidth="150" text="Products" />
        <Button fx:id="categoriesButton" onAction="#openCategories" prefWidth="150" text="Categories" />
        <Button fx:id="ordersButton" onAction="#openOrders" prefWidth="150" text="Orders" />
        <Button fx:id="suppliersButton" onAction="#openSuppliers" prefWidth="150" text="Suppliers" />
        <Button fx:id="usersButton" prefWidth="150" text="Users" />
        <Button fx:id="profileButton" onAction="#openProfile" prefWidth="150" text="Profile" />
        <Button fx:id="logoutButton" onAction="#logout" prefWidth="150" style="-fx-background-color:#E74C3C; -fx-text-fill:white;" text="Logout" />
    </VBox>

    <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="220" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <VBox fx:id="mainPanel" spacing="25" style="-fx-padding: 25; -fx-background-color: #84CEEB;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Dashboard" />

            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" prefHeight="80" prefWidth="200" style="-fx-background-color:#0ea5e9; -fx-background-radius:8;">
                    <Label style="-fx-text-fill:white;" text="Total Products" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200" style="-fx-background-color:#22c55e; -fx-background-radius:8;">
                    <Label style="-fx-text-fill:white;" text="Total Stock" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200" style="-fx-background-color:#eab308; -fx-background-radius:8;">
                    <Label style="-fx-text-fill:white;" text="Order Today" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="80" prefWidth="200" style="-fx-background-color: #a855f7; -fx-background-radius: 8;">
                    <Label style="-fx-text-fill:white;" text="Revenue" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" prefHeight="150" prefWidth="300" style="-fx-background-color:white; -fx-padding:20;                              -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Out of Stock Products" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="150" prefWidth="300" style="-fx-background-color:white; -fx-padding:20;                              -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Highest Sale Product" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="150" prefWidth="300" style="-fx-background-color:white; -fx-padding:20;                              -fx-background-radius:8; -fx-border-color:#dddddd;">
                    <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Low Stock Products" />
                </VBox>
            </HBox>

        </VBox>
    </AnchorPane>

</AnchorPane>
